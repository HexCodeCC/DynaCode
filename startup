shell.run("dobuild.lua", "/src", "bin/DynaCode.lua")
dofile("bin/DynaCode.lua")

log:setLoggingEnabled( true )
log:setLoggingPath("DynaCode.log")

app = Application( term.getSize() )

window = app + Stage( 2, 2, 20, 9 )

main = Template("mainPage", window)
window.activeTemplate = main

inp = main + TextContainer([[The TextContainer will  @tc-red d @tc-green e @tc-blue v @tc-orange e @tc-lime l @tc-purple o @tc-cyan p @tc-grey  scrollbars when required which can help when viewing text in large volume.]], 1, 1, 18, 8)
inp:createAnchor {
    right = 1,
    bottom = 1,
    top = 1,
    left = 1
}
inp.textColor = colours.grey

app.hotkey:registerCombination("close", "ctrl-b", function()
    error("done", 0)
end)

inp:on("resize", function( self )
    log("i", "TextContainer resized")
end)

app:start()
