shell.run("dobuild.lua", "/src", "bin/DynaCode.lua")
dofile("bin/DynaCode.lua")

log:setLoggingEnabled( true )
log:setLoggingPath("DynaCode.log")

app = Application( term.getSize() )

window = app + Stage( 2, 2, 20, 10 )

main = Template("mainPage", window)
window.activeTemplate = main

inp = main + TextInput(1, 1, 18, 8)
inp:createAnchor {
    right = 1,
    bottom = 1,
    top = 1,
    left = 1
}

inp.backgroundColour = colours.red
inp.cursorColour = colours.lime

app.hotkey:registerCombination("close", "ctrl-b", function()
    app:stop()
end)

app:start()
